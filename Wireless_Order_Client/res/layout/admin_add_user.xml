<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:gravity="center" >
    
    <!-- 输入布局，输入需要添加用户的用户名-->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/activity_add_user_username"
            android:textSize="20dp"
            android:layout_marginRight="2.5dp"/>
        
        <EditText android:id="@+id/admin_add_user_name"
               android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:inputType="text"
            android:textSize="25dp"/>
        
    </LinearLayout>
    
    <!-- 输入布局，输入需要添加用户的账号-->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/activity_add_user_account"
            android:textSize="20dp"
            android:layout_marginRight="2.5dp"/>
        
        <EditText android:id="@+id/admin_add_user_account"
               android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:inputType="text"
            android:textSize="25dp"/>
        
    </LinearLayout>
    <!-- 输入布局，输入需要添加用户的密码-->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/activity_add_user_password"
            android:textSize="20dp"
            android:layout_marginRight="2.5dp"/>
        
        <EditText android:id="@+id/admin_add_user_password"
               android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:inputType="text"
            android:textSize="25dp"/>
        
    </LinearLayout>
    
     <!-- 输入布局，输入需要添加用户的性别-->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/activity_add_user_gender"
            android:textSize="20dp"
            android:layout_marginRight="2.5dp"/>
        
        <Spinner android:id="@+id/admin_add_user_gender"
               android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:inputType="text"
            android:textSize="25dp"/>
        
    </LinearLayout>
    
     <!-- 输入布局，输入需要添加用户的权限-->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/activity_add_user_permission"
            android:textSize="20dp"
            android:layout_marginRight="2.5dp"/>
        
        <Spinner android:id="@+id/admin_add_user_permission"
               android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:inputType="text"
            android:textSize="25dp"/>
        
    </LinearLayout>
    
     <!-- 输入布局，输入需要添加用户的备注信息-->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/activity_add_user_remark"
            android:textSize="20dp"
            android:layout_marginRight="2.5dp"/>
        
        <EditText android:id="@+id/admin_add_user_remark"
               android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:inputType="text"
            android:textSize="25dp"/>
        
    </LinearLayout>
    

</LinearLayout>
