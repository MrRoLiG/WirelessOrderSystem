<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:weightSum="10"
	    android:orientation="horizontal"
	    android:gravity="center" >
	    
        	<ImageView 
        	    android:id="@+id/added_dishes_listview_item_ImageView" 
				android:layout_width="0dp" 
				android:layout_height="match_parent"
				android:layout_weight="1"/>
	    
        	<TextView 
                android:id="@+id/dishes_id_lv"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="#000000"
                />
            <TextView 
                android:id="@+id/dishes_name_lv"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="start|center"
                android:textSize="10dp"
                android:textColor="#000000"
                />
            <TextView 
                android:id="@+id/dishes_price_lv"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="start|center"
                android:textSize="10dp"
                android:textColor="#000000"
                />
            <TextView 
                android:id="@+id/dishes_number_lv"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="start|center"
                android:textSize="10dp"
                android:textColor="#000000"
                />
            <TextView 
                android:id="@+id/dishes_remark_lv"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="fill"
                android:textSize="10dp"
                android:textColor="#000000"
                />
            <CheckBox 
                android:id="@+id/dishes_flag_cb"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
        
      </LinearLayout> 
</LinearLayout>
